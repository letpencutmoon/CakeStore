@inject ILocalStorageService localstorageservice
@inject AuthenticationStateProvider provider
@inject NavigationManager navigationmanager
@inject ICartService cartservice

<MatNavSubMenu>
	<MatNavSubMenuHeader>
		<MatNavItem>
			用户
		</MatNavItem>
	</MatNavSubMenuHeader>

	<MatNavSubMenuList>
		<AuthorizeView>
			<Authorized>
				<MatNavItem Href="/Profile">
					个人中心
				</MatNavItem>
				<MatNavItem Href="/Order">
					订单
				</MatNavItem>
				<MatDivider></MatDivider>

				<AdminMenu />

				<MatNavItem OnClick="Logout">
					退出登录
				</MatNavItem>
			</Authorized>

			<NotAuthorized>
				<MatNavItem Href="@String.Format("/LogIn?returnUrl={0}",navigationmanager.ToBaseRelativePath(navigationmanager.Uri))">
					登录/注册
				</MatNavItem>
			</NotAuthorized>
		</AuthorizeView>

	</MatNavSubMenuList>
</MatNavSubMenu>

@code {
	private async Task Logout()
	{
		await localstorageservice.RemoveItemAsync("authToken");
		await cartservice.GetCarItemsCount();
		await provider.GetAuthenticationStateAsync();
		navigationmanager.NavigateTo("");
	}
}
